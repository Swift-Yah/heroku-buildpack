puts-step "Installing dynamic libraries"
mkdir -p $APP_DIR/.swift-lib
SWIFT_PREFIX="$(swiftenv prefix)"
cp $SWIFT_PREFIX/usr/lib/swift/linux/*.so $APP_DIR/.swift-lib
find "$SWIFT_BUILD_PATH/$SWIFT_BUILD_CONFIGURATION/" -name '*.so' -type f -exec cp {} $APP_DIR/.swift-lib \;

cp -a /usr/lib/x86_64-linux-gnu/libatomic* $APP_DIR/.swift-lib
 
puts-step "Installing binaries"
mkdir -p "$APP_DIR/.swift-bin"
find "$SWIFT_BUILD_PATH/$SWIFT_BUILD_CONFIGURATION/" ! -name '*.so' -type f -perm /a+x -exec cp {} $APP_DIR/.swift-bin \; 
